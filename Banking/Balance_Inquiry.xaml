<Page x:Class="Banking.Balance_Inquiry"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Banking"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Balance_Inquiry">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition  />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Label Grid.ColumnSpan="2" Margin="20" FontSize="20" Background="Gray" Grid.Column="0" Content="Balance Inquiry" HorizontalContentAlignment="Center" />

        <TextBox Grid.ColumnSpan="2" Margin="20" Grid.Row="1" FontSize="20"  Grid.Column="0" Name="Balance" HorizontalContentAlignment="Center" />

        <Button Content="Go Back" Margin="20" Grid.ColumnSpan="2" Grid.Row="2" HorizontalContentAlignment="Center" Click="Go_Back" />

        <Button Content="Exit" Margin="20" Grid.ColumnSpan="2" Grid.Row="3" HorizontalContentAlignment="Center" Click="Exit" />
    </Grid>
</Page>
